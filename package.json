{
  "name": "zameme",
  "version": "0.1.0",
  "description": "Zameme - Confidential Fair Launch Platform for Meme Tokens",
  "private": true,
  "license": "BSD-3-Clause-Clear",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "chain": "pnpm --filter ./packages/hardhat chain",
    "compile": "pnpm --filter ./packages/hardhat compile",
    "deploy:localhost": "pnpm --filter ./packages/hardhat deploy:localhost && pnpm generate",
    "deploy:sepolia": "pnpm --filter ./packages/hardhat deploy:sepolia && pnpm generate",
    "generate": "ts-node -T ./scripts/generateTsAbis.ts",
    "start": "pnpm --filter ./packages/nextjs dev",
    "build": "pnpm --filter ./packages/nextjs build",
    "test": "pnpm --filter ./packages/hardhat test"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}

